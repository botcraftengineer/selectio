{
  "name": "@selectio/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./client": {
      "default": "./src/client.ts"
    },
    "./schema": {
      "default": "./src/schema/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "drop": "bun with-env bun src/scripts/drop-schema.ts",
    "format": "biome format .",
    "lint": "biome lint .",
    "check": "biome check .",
    "push": "bun with-env drizzle-kit push",
    "studio": "bun with-env drizzle-kit studio",
    "generate-key": "bun src/scripts/generate-encryption-key.ts",
    "set-admin": "bun with-env bun src/scripts/set-admin-role.ts",
    "migrate-workspaces": "bun with-env bun src/scripts/migrate-to-workspaces.ts",
    "migrate-company": "bun with-env bun src/scripts/migrate-company-settings.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "bun run --env-file ../../.env"
  },
  "dependencies": {
    "@selectio/config": "workspace:*",
    "@selectio/validators": "workspace:*",
    "@vercel/postgres": "0.10.0",
    "drizzle-orm": "0.45.0",
    "drizzle-zod": "0.8.3",
    "nanoid": "^5.1.6",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@selectio/tsconfig": "workspace:*",
    "drizzle-kit": "^0.31.8",
    "typescript": "5.9.3"
  }
}
