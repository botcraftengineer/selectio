{
  "name": "@selectio/root",
  "private": true,
  "engines": {
    "node": "^22.21.0",
    "bun": "^1.3.3"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "bun --filter @selectio/auth generate",
    "db:push": "turbo -F @selectio/db push",
    "db:studio": "turbo -F @selectio/db studio",
    "db:generate-key": "bun --filter @selectio/db generate-key",
    "db:migrate-workspaces": "bun --filter @selectio/db migrate-workspaces",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @selectio/nextjs...",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "hh:login": "bun --filter @selectio/jobs hh:login",
    "hh:example": "bun --filter @selectio/jobs hh:example",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "lint:ws": "bunx sherif@latest",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@turbo/gen": "^2.6.3",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ]
}
